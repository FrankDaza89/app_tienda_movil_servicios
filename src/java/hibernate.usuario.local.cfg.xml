<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/app_tienda_usuario?zeroDateTimeBehavior=convertToNull</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">root</property>
        <mapping resource="ec/tienda/movil/usuario/modelo/TipoUsuario.hbm.xml"/>
        <mapping resource="ec/tienda/movil/usuario/modelo/Sector.hbm.xml"/>
        <mapping resource="ec/tienda/movil/usuario/modelo/LoginUsuario.hbm.xml"/>
        <mapping resource="ec/tienda/movil/usuario/modelo/AsignacionPantalla.hbm.xml"/>
        <mapping resource="ec/tienda/movil/usuario/modelo/Perfil.hbm.xml"/>
        <mapping resource="ec/tienda/movil/usuario/modelo/TipoAcceso.hbm.xml"/>
        <mapping resource="ec/tienda/movil/usuario/modelo/Pantalla.hbm.xml"/>
        <mapping resource="ec/tienda/movil/usuario/modelo/DatosUsuario.hbm.xml"/>
        <mapping resource="ec/tienda/movil/usuario/modelo/Ubicacion.hbm.xml"/>
        <mapping resource="ec/tienda/movil/usuario/modelo/AsignacionPerfil.hbm.xml"/>
    </session-factory>
</hibernate-configuration>
